<% if flash[:notice] || flash[:alert] || flash[:error] %>
    <div class="flash-notice-container">
      <% if flash[:notice] %>
          <div class="flash-notice"><%= image_tag("ok_icon.png", :alt => "Success", :class => "flash-icon") %><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
          <div class="flash-alert"><%= image_tag("stop_icon.png", :alt => "Attention", :class => "flash-icon") %><%= flash[:alert] %></div>
      <% end %>
      <% if flash[:error] %>
          <div class="flash-error"><%= image_tag("stop_icon.png", :alt => "Error", :class => "flash-icon") %><%= flash[:error] %></div>
      <% end %>
    </div>
<% end %>